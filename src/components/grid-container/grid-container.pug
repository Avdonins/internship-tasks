- 
  const items = [ 
    { value: "Мостовая сталь/Стальные конструкции мостов", color: "gray", area: "block0" },
    { value: "Железобетонные конструкции мостов", color: "gray", area: "block1" },
    { value: "Дорожные ограждения барьерного типа", color: "gray", area: "block2" },
    { value: "Шпунтовой замок", color: "blue", area: "block3" },
    { value: "Мостовой крепеж", color: "gray", area: "block4" },
    { value: "Профили для деформационных швов", color: "lightBlue", area: "block5" },
    { value: "Плетеные габионы", color: "gray", area: "block6" },
    { value: "Модульные мосты", color: "gray", area: "block7" },
  ];

mixin grid-container()
    section.grid-container
        h1.grid-container__title <span>Комплексные</span> предложения для мостостроения
        .grid-container__items
            each item in items
                a.grid-container__item(class=item.color class=item.area href="/")=item.value